modules = ["python-3.12", "nodejs-20", "web", "postgresql-16"]
run = "python main.py"

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "libyaml"]

[deployment]
run = ["sh", "-c", "python app.py"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run Full Stack"

[[workflows.workflow]]
name = "Run Flask App"
author = 23270859
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python app.py"

[[workflows.workflow]]
name = "Run Full Stack"
author = 23270859
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python simple_app.py"

[[workflows.workflow]]
name = "Run Simple App"
author = 23270859
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python simple_app.py"
