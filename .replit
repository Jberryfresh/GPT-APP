modules = ["python-3.12", "nodejs-20", "web"]
run = "python main.py"

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "libyaml"]

[deployment]
run = ["sh", "-c", "python app.py"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run Full Stack"

[[workflows.workflow]]
name = "Run Flask App"
author = 23270859
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow]]
name = "Run Full Stack"
author = 23270859
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
